@model CarLoc.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoDiaria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoDiaria)
        </dd>
    </dl>
</div>

<hr />

<h4>Veículos desta Categoria</h4>

@if (Model.Veiculos != null && Model.Veiculos.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Placa</th>
                <th>Modelo</th>
                <th>Ano</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var veiculo in Model.Veiculos)
            {
                <tr>
                    <td>@veiculo.Placa</td>
                    <td>@veiculo.Modelo</td>
                    <td>@veiculo.Ano</td>
                    <td>@veiculo.Status?.Nome</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>Não há veículos cadastrados nesta categoria.</em></p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
